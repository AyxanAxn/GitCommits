@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="m-auto">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Title</td>
                <td>Content</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DataList)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Cotnent</td>
                <td>
                    <a asp-controller="Home" asp-action="Update" class="btn btn-primary">Update</a>
                </td>
                <td>
                    <a asp-controller="Home" asp-action="Delete" asp-route-deleteId="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <form asp-action="Add" asp-controller="Home" method="post">
        <input class="form-control mb-1" type="text" name="Title" id="Title" />
        <input class="form-control mb-1" type="text" name="Cotnent" id="Cotnent" />
        <input type="submit" name="Submit" value="Add" class="btn btn-success btn-block" />
    </form>
</div>
